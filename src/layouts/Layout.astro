---
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import '@fontsource-variable/fredoka'
import '../styles/global.css'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <link rel='shortcut icon' href='favicon.svg' type='image/x-icon' />
    <title>My Portfolio Dev</title>
  </head>
  <body class='font-light text-lg'>
    <div
      class='fixed top-0 z-[-2] min-h-screen w-full bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] dark:bg-zinc-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]'
    >
    </div>
  </body>
  <Header />
  <slot />
  <Footer />

  <style is:global>
    :root {
      color-scheme: dark light;
    }

    * {
      font-family:
        'Fredoka Variable',
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        'Segoe UI',
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        'Open Sans',
        'Helvetica Neue',
        sans-serif;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      scroll-behavior: none;
      overflow-x: hidden;
      color: var(--color-zinc-800);
    }

    @media (prefers-color-scheme: dark) {
      body {
        color: var(--color-zinc-100);
      }
    }
  </style>
</html>
